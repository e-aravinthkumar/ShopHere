<%- include('../includes/head.ejs') %>
<main class="bg-slate-100 ">
    <div class="container mx-auto">
        <h1 class="text-2xl font-medium pt-8">Product List</h1>
    </div>
    <% if(products.length >0) {  %>
    <div class="product-container flex flex-wrap justify-evenly p-5">
    <% for(let product of products) {  %>
        <div class="max-w-xs rounded-md gap-4 product p-3 drop-shadow-lg bg-white flex flex-col my-5">
           <div class="mx-auto rounded-lg overflow-hidden">
            <img class="w-[400px] h-[200px]" src="https://picsum.photos/200/300" alt="img">
           </div> 
           <div>
            <h1 class="text-indigo-500 text-2xl font-semibold"><%= product.name %></h1>
           </div>
           <div>
            Lorem ipsum dolor, sit amet consectetur adipisicing elit. Est, ullam!
           </div>
           <div class="flex gap-3 items-center">
            <button class="bg-indigo-500 text-white font-semibold px-4 py-1 rounded-md">View</button>
            <button class=" text-indigo-500 font-semibold px-4 py-1 rounded-md">Add to Cart</button>
           </div>
        </div>
    <% } %>
    </div>
    <% } else { %>
        <h1>No Products</h1>
    <% } %>
</main>
<%- include('../includes/foot.ejs') %>